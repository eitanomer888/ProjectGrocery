<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layoutDirection="rtl">

    <Button
        android:id="@+id/btnD_back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/return_icon"
        />

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/tv_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="שם פריט" />

        <TextView
            android:id="@+id/tvDP_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/tvDP_CurrentAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="כמות נוכחית" />

        <EditText
            android:id="@+id/etDP_CurrentAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:inputType="number"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/tvDP_FillDate"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="תוקף חדש" />

        <Button
            android:id="@+id/btnDP_FillDate"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/barcode_icon"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:id="@+id/etDP_FillDate"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="10"
            android:text="אנא סרוק תאריך"
            android:gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/tvDP_LastDate"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="תוקף אחרון" />

        <Button
            android:id="@+id/btnDP_LastDate"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/barcode_icon"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:id="@+id/etDP_LastDate"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="10"
            android:text="אנא סרוק תאריך"
            android:gravity="center"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/tvDP_LastDateAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="כמות תוקף אחרון" />

        <EditText
            android:id="@+id/etDP_LastDateAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:inputType="number"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btnDP_Confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="אישור"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        />

</LinearLayout>